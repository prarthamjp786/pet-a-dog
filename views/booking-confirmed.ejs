                        <button id="log-out-btn" class="btn btn-primary ml-4" type="submit">Log out</button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top: 5rem;">
        <h1 class="display-4" style="text-align: center;">Booking Details</h1>
        <% for (var booking of bookingDetails) { %>
        <div class="card mt-4" style="width: 100%;">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <p class="h2">Booking ID: </p>
                    </div>
                    <div class="col-md">
                        <p class="h2"><%= booking.booking_id %></p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <p class="h4">Customer Name: </p>
                    </div>
                    <div class="col-md">
                        <p class="h4"><%= booking.user_first_name %> <%= booking.user_last_name %></p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <p class="h4">Sitter Name: </p>
                    </div>
                    <div class="col-md">
                        <p class="h4"><%= booking.sitter_name %></p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <p class="h4">Service Selected: </p>
                    </div>
                    <div class="col-md">
                        <p class="h4"><%= booking.service_name %> </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <p class="h4">Date of Booking: </p>
                    </div>
                    <div class="col-md">
                        <p class="h4"><%= booking.booking_date %> </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <p class="h4">Drop Off Date: </p>
                    </div>
                    <div class="col-md">
                        <p class="h4"><%= booking.drop_off_date %> </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <p class="h4">Drop off Time: </p>
                    </div>
                    <div class="col-md">
                        <p class="h4"><%= booking.drop_off_time_from %> </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <p class="h4">Pick up Date: </p>
                    </div>
                    <div class="col-md">
                        <p class="h4"><%= booking.pick_up_date %> </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <p class="h4">Pick up Time: </p>
                    </div>
                    <div class="col-md">
                        <p class="h4"><%= booking.pick_up_time_from %> </p>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>

    <footer class="container-fluid page-footer font-small bg-info pt-4" style="margin-top: 2rem;">
        <div class="container text-center text-md-left">
